#!/usr/bin/make -f

# Przykładowy plik debian/rules

# Zmienne
PKGNAME := myscript
VERSION := 1.0
DEB_BUILD_OPTIONS := nocheck

# Budowanie
%:
    dh $@

# Przygotowanie przed budową
override_dh_auto_configure:
    ./configure --prefix=/usr

# Czyszczenie przed budową
override_dh_auto_clean:
    dh_auto_clean
    rm -rf debian/$(PKGNAME)

# Instalacja przed pakietowaniem
override_dh_auto_install:
    dh_auto_install
    # Dodatkowe czynności instalacyjne, jeśli są potrzebne
    # np. instalacja dodatkowych plików

# Budowanie pakietu binarnego
override_dh_auto_build:
    dh_auto_build
    # Dodatkowe czynności związane z budowaniem, jeśli są potrzebne
    # np. kopiowanie plików do odpowiednich lokalizacji

# Pakietowanie
override_dh_auto_test:
    # Pominięcie testów (możesz usunąć tę sekcję, jeśli nie pomijasz testów)
    dh_auto_test

# Instalacja paczki
override_dh_install:
    dh_install
    # Dodatkowe czynności związane z instalacją, jeśli są potrzebne
    # np. dodawanie dodatkowych plików do paczki

# Optymalizacja
override_dh_compress:
    dh_compress
    # Dodatkowe czynności związane z kompresją, jeśli są potrzebne
    # np. wyłączenie kompresji dla konkretnych typów plików

# Przed finalnym pakietowaniem
override_dh_fixperms:
    dh_fixperms
    # Dodatkowe czynności związane z uprawnieniami plików, jeśli są potrzebne

# Budowanie archiwum źródłowego
override_dh_builddeb:
    dh_builddeb
    # Dodatkowe czynności związane z budowaniem pakietu, jeśli są potrzebne
